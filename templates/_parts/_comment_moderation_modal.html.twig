<!--        Comment moderation display-->
<div class="hidden bg-white px-24 py-20 rounded-md" id="comment">
  <p class="comment-modal-content mb-8"></p>
  <form action=""
        id="modal-form-comment"
        class="flex justify-end"
        method="post"
  >
    <input type="hidden"
           class="id-value"
           name="id"
           value=""
    >
    <button type="button"
            class="modal-close bg-none border-2 border-gray-500 hover:border-gray-600 transition duration-500 delay-100 ease-out text-gray-500 hover:text-gray-600 cursor-pointer rounded-md py-4 px-8 mr-8"
    >
      Annuler
    </button>
    <input type="submit"
           class="bg-green-500 hover:bg-green-600 transition duration-500 delay-100 ease-out text-white cursor-pointer rounded-md py-4 px-8"
           form="modal-form-comment"
           value="Confirmer"
    >
  </form>
</div>
