<div class="modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50 py-12">
  <div class="modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  <div class="modal-container bg-none px-6 lg:px-0 lg:max-h-full mx-auto z-50 overflow-y-hidden">
    <!--Close button-->
    <div class="modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-20 lg:mt-4 mr-6 lg:mr-4 text-white text-sm z-50">
      <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
           viewBox="0 0 18 18">
        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
      </svg>
    </div>
    <div class="modal-content w-full h-full">
      <!--Body-->
      <div class="modal-body">
        <!--        Image display-->
        <img class="hidden max-w-full px-4 lg:px-0 lg:max-w-5xl max-h-screen"
             id="image"
             src=""
             alt=""
        >
        <!--        Video display-->
        <iframe class="hidden max-w-full px-4 lg:px-0 lg:max-w-5xl max-h-screen"
                id="video"
                width="1200"
                height="600"
                src=""
                allowfullscreen
        >
        </iframe>
        <!--        Comment moderation display-->
        <div class="hidden bg-white px-24 py-20 rounded-md" id="comment">
          <p class="comment-modal-content mb-8"></p>
          <form action=""
                id="modal-form-comment"
                class="flex justify-end"
                method="post"
          >
            <input type="hidden"
                   class="id-value"
                   name="id"
                   value=""
            >
            <button type="button"
                    class="modal-close bg-none border-2 border-gray-500 hover:border-gray-600 transition duration-500 delay-100 ease-out text-gray-500 hover:text-gray-600 cursor-pointer rounded-md py-4 px-8 mr-8"
            >
              Annuler
            </button>
            <input type="submit"
                   class="bg-green-500 hover:bg-green-600 transition duration-500 delay-100 ease-out text-white cursor-pointer rounded-md py-4 px-8"
                   form="modal-form-comment"
                   value="Confirmer"
            >
          </form>
        </div>
        <!--        Media Form display-->
        <div class="hidden bg-white px-20 py-16 rounded-md" id="media-form">
          <h3 class="font-jura font-bold text-center lg:text-left text-xl lg:text-2xl mb-8 lg:border-l-4 border-yellow-500 lg:pl-4">
            Modifier l'image
          </h3>
          {% if mediaForms is defined %}
            {{ form_start(mediaForms.0) }}
            {{ form_row(mediaForms.0.altText, {
              'attr': {
                'class': 'mb-8 w-full'
              }
            }) }}
            <div class="flex justify-end">
              <button type="button"
                      class="modal-close bg-none border-2 border-gray-500 hover:border-gray-600 transition duration-500 delay-100 ease-out text-gray-500 hover:text-gray-600 cursor-pointer px-2 lg:px-6 py-2 rounded-md mb-6 lg:mb-0 mr-6"
              >
                Annuler
              </button>
              <button class="inline-block order-1 lg:order-3 border-2 border-green-500 hover:border-green-600 bg-green-500 hover:bg-green-600 transition duration-500 delay-100 ease-out text-white px-2 lg:px-6 py-2 rounded-md mb-6 lg:mb-0"
                      type="submit">
                <i class="fas fa-save hidden lg:visible pr-2"></i>
                Valider
              </button>
            </div>
            {{ form_end(mediaForms.0) }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
