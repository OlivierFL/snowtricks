<div class="update-modal opacity-0 pointer-events-none fixed w-full h-full top-0 left-0 flex items-center justify-center z-50 py-12"
     id="update-modal-{{ key }}">
  <div class="update-modal-overlay absolute w-full h-full bg-gray-900 opacity-50"></div>
  <div class="update-modal-container bg-none px-6 lg:px-0 lg:max-h-full mx-auto z-50 overflow-y-hidden">
    <!--Close button-->
    <div class="update-modal-close absolute top-0 right-0 cursor-pointer flex flex-col items-center mt-20 lg:mt-4 mr-6 lg:mr-4 text-white text-sm z-50">
      <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
           viewBox="0 0 18 18">
        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
      </svg>
    </div>
    <div class="update-modal-content w-full h-full">
      <!--Body-->
      <div class="hidden bg-white px-20 py-16 rounded-md media-form">
        <h3 class="font-jura font-bold text-center lg:text-left text-xl lg:text-2xl mb-8 lg:border-l-4 border-yellow-500 lg:pl-4">
          Modifier l'image
        </h3>
        {% if mediaForms['media_' ~ trickMedium.media.id].altText is defined %}
          {{ form_start(mediaForms['media_' ~ trickMedium.media.id]) }}
          {{ form_row(mediaForms['media_' ~ trickMedium.media.id].altText, {
            'attr': {
              'class': 'w-full'
            }
          }) }}
        {% else %}
          {{ form_start(mediaForms['media_' ~ trickMedium.media.id]) }}
          {{ form_row(mediaForms['media_' ~ trickMedium.media.id].video_url, {
            'attr': {
              'class': 'w-full'
            },
            'help_attr': {
              'class': 'text-gray-500 text-sm font-light text-left mt-2'
            }
          }) }}
        {% endif %}
        <div class="flex justify-end mt-8">
          <button type="button"
                  class="update-modal-close bg-none border-2 border-gray-500 hover:border-gray-600 transition duration-500 delay-100 ease-out text-gray-500 hover:text-gray-600 cursor-pointer px-2 lg:px-6 py-2 rounded-md mb-6 lg:mb-0 mr-6"
          >
            Annuler
          </button>
          <button class="update-media-btn inline-block order-1 lg:order-3 border-2 border-green-500 hover:border-green-600 bg-green-500 hover:bg-green-600 transition duration-500 delay-100 ease-out text-white px-2 lg:px-6 py-2 rounded-md mb-6 lg:mb-0"
                  type="submit"
                  id="update-media-btn-{{ key }}"
          >
            <i class="fas fa-save hidden lg:visible pr-2"></i>
            Valider
          </button>
        </div>
        {{ form_end(mediaForms['media_' ~ trickMedium.media.id]) }}
      </div>
    </div>
  </div>
</div>
