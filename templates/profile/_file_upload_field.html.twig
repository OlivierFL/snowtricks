<div class="flex flex-col">
  <div class="relative mx-auto w-full">
    <div class="absolute inset-0 flex justify-center items-center pointer-events-none">
      {% if form_errors(editProfileForm.avatar) %}
        <i class="fas fa-exclamation-circle text-red-500 w-5 h-5 pl-4"></i>
      {% else %}
        <i class="fas fa-plus text-gray-500 w-5 h-5 pl-4"></i>
      {% endif %}
      {{ form_label(editProfileForm.avatar, null, {
        'label_attr': {'class': 'text-sm text-gray-500 pl-6 js-file-label'
        }}) }}
    </div>
    {{ form_widget(editProfileForm.avatar, {
      'attr': {
        'class': 'opacity-0 cursor-pointer block border-b border-gray-500 text-gray-500 bg-gray-100 pl-10 py-2 focus:border-yellow-500 focus:shadow-md focus:ring-2 focus:ring-yellow-500 w-full'
      }}) }}
  </div>
  <div class="text-red-500 font-bold text-center">
    {{ form_errors(editProfileForm.avatar) }}
  </div>
</div>
